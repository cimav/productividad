<div class="level product-actions">
  <div class="level-left">
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><%= link_to 'Proyectos', proyectos_path %></li>
      </ul>
    </nav>
  </div>
  <div class="level-right">
    
    <%= link_to proyectos_path, class: 'button' do %>
      <span class="icon is-small"><i class="fas fa-angle-left" aria-hidden="true"></i></span>
    <% end %>
  </div>
</div>

<div class="product">
  <h1 class="project-title"><%= link_to @project.name, proyectos_path(@project) %></h1>
  <%= render 'status_header', project: @project  %>
  <%= render 'project_info', project: @project, person: @person, show_participants: true  %>
</div>
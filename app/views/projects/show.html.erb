<div class="level product-actions">
  <div class="level-left">
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><%= link_to 'Proyectos', projects_path(@person.shortname) %></li>
      </ul>
    </nav>
  </div>
  <div class="level-right">
    <% if @project.can_edit(current_user.id) %>
      <%= link_to 'Administrar', administrar_project_path(@person.shortname, @project), class: 'button' %>
    <% end %>
    <%= link_to projects_path(@person.shortname), class: 'button' do %>
      <span class="icon is-small"><i class="fas fa-angle-left" aria-hidden="true"></i></span>
    <% end %>
  </div>
</div>

<div class="product">
  <h1 class="project-title"><%= link_to @project.name, administrar_project_path(@person.shortname, @project) %></h1>
  <%= render 'status_header', project: @project, person: @person  %>
  <%= render 'project_info', project: @project, person: @person, show_participants: true  %>
</div>
<div class="level product-actions">
  <div class="level-left">
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><%= link_to 'Proyectos', projects_path(@person.shortname) %></li>
      </ul>
    </nav>
  </div>
  <div class="level-right">
    <% if @project.can_edit(current_user.id) %>
      <%= link_to 'Administrar', administrar_project_path(@person.shortname, @project), class: 'button is-link' %>
    <% end %>
    <%= link_to projects_path(@person.shortname), class: 'button' do %>
      <span class="icon is-small"><i class="fas fa-angle-left" aria-hidden="true"></i></span>
    <% end %>
  </div>
</div>

<div class="product">
<h1 class="project-title"><%= link_to @project.name, project_path(@person.shortname, @project) %></h1>
<div class="product-extra">
  <%= @project.research_type_text %><br>
  <%= @project.source_type_text %> (<%= @project.source %>)
</div>
<h2>Objetivo</h2>
<p><%= @project.objectives %></p>
<h2>Resultados Esperados</h2>
<p><%= @project.results %></p>

  
</div>
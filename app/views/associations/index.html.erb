<div class="container catalog">

<% if notice %>
  <div id="notice" class="notification is-info">
    <button class="delete"></button>
    <%= notice %>
  </div>
<% end %>

<div class="level">
  <div class="level-left">
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><%= link_to 'Asociaciones', associations_path %></li>
      </ul>
  </nav>
  </div>
  <div class="level-right">
    <%= link_to 'Agregar', new_association_path, class:'button is-link' %>
  </div>
</div>

<table class="table is-striped is-fullwidth is-hoverable">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ubicación</th>
      <th>País</th>
      <th>Estado</th>
    </tr>
  </thead>

  <tbody>
    <% @associations.each do |association| %>
      <tr>
        <td>
          <strong><%= link_to association.name, association_path(association) %></strong>
          <div class="row-extra">
            <% if association.is_international %>
              <span class="tag is-light">Internacional</span>
            <% end %>
          </div>
        </td>
        <td><%= association.location %></td>
        <td><%= association.country.name %></td>
        <td><%= association.status_text %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
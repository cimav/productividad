        <li><a>Lineas de Investigación</a></li>
        <li><a title="Bitácora de cambios"><span class="icon has-text-grey-light"><i class="fas fa-file-alt"></i></span></a></li>
        <li><a title="Configuración"><span class="icon has-text-grey-light"><i class="fas fa-cogs"></i></span></a></li>
    </ul>
  </div>

  <div class="tabs-content">
    <ul>
      <li class="is-active">
        <%= render 'general', person: @person  %>
      </li>
      <li>
     	  <%= render 'experiences/ui', person: @person  %>
      </li>
      <li>
    	  <%= render 'education/ui', person: @person  %>

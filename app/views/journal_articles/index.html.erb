<div class="container product-index">
<p id="notice"><%= notice %></p>

<div class="level">
  <div class="level-left">
    <h2>Art√≠culos en revistas</h2>
  </div>
  <div class="level-right">
    <%= link_to 'Agregar', new_journal_article_path, class:'button is-link' %>
  </div>
</div>

<% @journal_articles.each do |journal_article| %>
<div class="box p-item">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= link_to journal_article.title, journal_article_path(@person.shortname, journal_article) %></strong>
          <br>
          <small><%= journal_article.authors %></small>
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-right">
          <%= link_to edit_journal_article_path(@person.shortname, journal_article), class: 'level-item' do %>
            <span class="icon is-small">
              <i class="fas fa-edit" aria-hidden="true"></i>
            </span>
          <% end %>
        </div>
      </nav>
    </div>
  </article>
</div>
<% end %>
</div>
